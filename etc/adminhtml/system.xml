<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <tab id="shoppersmind" translate="label" sortOrder="200">
            <label>Shopper's Mind</label>
        </tab>
        <section id="shoppersmind_trackingcode" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Tracking Code</label>
            <tab>shoppersmind</tab>
            <resource>ShoppersMind_TrackingCode::shoppersmind_trackingcode</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable/disable Shopper's mind certified shop satisfaction survey</comment>
                </field>
                <field id="key" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Key</label>
                    <comment>Insert Shopper's Mind provided unique key</comment>
                </field>
                <field id="country" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Select Country</label>
                    <source_model>ShoppersMind\TrackingCode\Model\Config\Source\Country</source_model>
                    <comment>Select your country</comment>
                </field>
            </group>
        </section>
    </system>
</config>
